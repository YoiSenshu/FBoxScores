<Window x:Class="FBoxScores.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FBoxScores"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TabControl>
            <TabItem Header="Lista zawodników">
                <DataGrid x:Name="DataGridZawodnicy"/>
                <!--Lista zawodników-->
            </TabItem>
            <TabItem Header="Zawodnik">
                <StackPanel>
                    <TextBlock x:Name="PlayerNameText" IsHitTestVisible="False" FontSize="20" Margin="10" HorizontalAlignment="Center"/>
                    <ComboBox Name="PlayerSelection" HorizontalAlignment="Center" Width="200" SelectionChanged="PlayerSelection_SelectionChanged"></ComboBox>
                    <DataGrid Margin="10" 
                       HorizontalAlignment="Center" 
                              IsHitTestVisible="False"
                       GridLinesVisibility="None"
                       x:Name="ScoreData" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" HeadersVisibility="None"/>

                </StackPanel>
            </TabItem>



        </TabControl>

    </StackPanel>
</Window>